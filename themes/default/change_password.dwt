 <!-- #BeginLibraryItem "/lib/header_v2.lbi" --><!-- #EndLibraryItem -->
<div class="content-area">
    <div class="content">
	<div class="dialog-con dialog" style="width:320px;" id="step1">
        <form>
          <div class="dialog-head">
            <p class="dia-title">忘记密码</p>
          </div>
          <div class="check-container">
            <input type="text" class="global-input" placeholder="请输入您的手机号码" style="width:198px;" id="mobile_input">
            <span class="tips-container" style="display:none">请输入合法的手机号码</span>
          </div><a href="#" class="btn vert-btn code-btn" id="get_code">获取验证码</a><a href="#" class="btn vert-btn code-btn" style="display:none" id="reget_code">重新获取（<span id="time_display">60</span>）</a>
          <div class="check-container">
            <input type="text" class="global-input" placeholder="请输入短信验证码" id="code_input">
            <span class="tips-container" style="display:none">输入错误</span>
          </div>
          <div class="single-btn-area">
            <input class="btn status1-btn long-btn" type="button" value="下一步" id="next">
          </div>
        </form>
      </div>

      <div class="dialog-con dialog" style="width:320px;display:none" id="step2">
        <form>
          <div class="dialog-head">
            <p class="dia-title">请重置您的密码</p>
          </div>
         <div class="check-container">
            <input type="text" class="global-input" placeholder="新密码" id="new_password">
            <span class="tips-container" style="display:none">请设置6位或以上密码</span>
          </div>
	  <div class="check-container">
            <input type="text" class="global-input" placeholder="确认新密码" id="new_password_repeate">
            <span class="tips-container" style="display:none">两次输入不一致</span>
          </div>
          <div class="single-btn-area">
            <input class="btn status1-btn long-btn" type="button" value="确定" id="confirm_change">
          </div>
        </form>
      </div>

    </div>
  </div>
